<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#D8EA27"
                android:centerColor="#642CC8"
                android:endColor="#FA1100"
                android:type="linear" />
            <size
                android:width="60dp"
                android:height="60dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>